<select class="form-control auto-width" onchange={{action (mut value) value="target.value"}}>
  <option value=null>{{t 'global.selectUnselected'}}</option>
  {{#each options as |option|}}
    <option value={{option}} selected={{eq value option}}>
      {{#if translate}}
        {{t option}}
      {{else}}
        {{option}}
      {{/if}}
    </option>
  {{/each}}
</select>
