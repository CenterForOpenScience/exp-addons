{{! template-lint-disable invalid-interactive}}

<div class="row exp-lookit-preferential-looking">

    <video id="player-calibration-video"
           class="calibration center"
           autoplay
           style="display:none;">
        {{#each calibrationVideoSources as |stream|}}
            <source src="{{stream.src}}" type="{{stream.type}}">
        {{/each}}
    </video>

    {{#if (or doingIntro doingFinalAudio)}}
        <video id="player-video"
               class="attn"
               autoplay
               loop>
            {{#each videoSources as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}
        </video>
    {{/if}}

    {{#if isPaused}}
        <p class="pause-instructions"> Study paused </p>
        {{#if updatedIsFullscreen}}
            <p class="pause-instructions"> Press space to resume </p>
            <p class="pause-instructions"> (You'll have a moment to turn around again.) </p>
        {{/if}}
    {{/if}}

    {{#unless updatedIsFullscreen}}
        <button class="btn btn-success exp-lookit-preferential-looking" id="fsButton" {{ action 'showFullscreen'}} >
                please return to fullscreen
        </button>
    {{/unless}}


    <div id="allstimuli" style="display:none;">
        {{#if leftImage}}
            <div id="left-container">
                <img id="left-image" src={{leftImage}} class="stim-image"/>
            </div>
        {{/if}}
        {{#if rightImage}}
            <div id="right-container">
                <img id="right-image" src={{rightImage}} class="stim-image"/>
            </div>
        {{/if}}
        {{#if centerImage}}
            <div id="center-container">
                <img id="center-image" src={{centerImage}} class="stim-image"/>
            </div>
        {{/if}}
    </div>

    <audio id="player-calibration-audio">
        {{#each calibrationAudioSources as |stream|}}
            <source src="{{stream.src}}" type="{{stream.type}}">
        {{/each}}
    </audio>

    {{#if hasBeenPaused}}
        <audio id="player-audio"
               onended={{action 'completedIntroAudio'}}>
            {{#each unpauseAudio as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}
        </audio>
    {{else}}
        <audio id="player-audio">
            {{#each introAudioSources as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}
        </audio>
    {{/if}}

    <audio id="player-test-audio">
        {{#each testAudioSources as |stream|}}
            <source src="{{stream.src}}" type="{{stream.type}}">
        {{/each}}
    </audio>

    <audio id="player-pause-audio">
        {{#each pauseAudio as |stream|}}
            <source src="{{stream.src}}" type="{{stream.type}}">
        {{/each}}
    </audio>

    <audio id="player-pause-audio-leftfs">
        {{#each fsAudio as |stream|}}
            <source src="{{stream.src}}" type="{{stream.type}}">
        {{/each}}
    </audio>

    {{#if endAudioSources}}
        <audio id="player-endaudio"
               onended={{action 'next'}}>
            {{#each endAudioSources as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}
        </audio>
    {{/if}}

</div>

