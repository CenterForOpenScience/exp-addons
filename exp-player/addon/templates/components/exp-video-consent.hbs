{{#if (eq section 'info')}}
<div class="row">
  <div class="col-xs-10">
    <p>If you'd like to participate, please read through the following information and then record your consent statement.</p>
    <div class="well">
      <center>
        <span class="exp-text-heavy exp-text-large">
          {{title}}
        </span>
      </center>
      <br>
      {{#each blocks as |block|}}
      <span class="exp-text-heavy exp-text-medium">
        {{block.title}}
      </span>
      <p class="breaklines">
        {{block.body}}
      </p>
      {{/each}}
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-10">
    <button class="pull-right btn btn-default" onclick={{action 'nextSection'}}>Continue</button>
  </div>
</div>
{{else if (eq section 'capture')}}
<div class="row">
  <div class="col-xs-offset-1 col-xs-10">
    <div class="well">
      <span class="breaklines exp-video-consent-prompt">{{prompt}}</span>
    </div>
  </div>
</div>
<div class="row" style="height: 70vh">
  <div class="recorder col-xs-12 col-md-10 col-md-offset-1" style="height:100%"></div>
</div>
<br>
<div class="row exp-controls">
  <div class="col-xs-offset-1 col-xs-10">
    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        {{#if videoRecorder.recording}}
          <button class="btn btn-default" {{ action 'finish' }}>Finish</button>
        {{else}}
          <button class="btn btn-default" {{ action 'record' }}>Record</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/if}}
