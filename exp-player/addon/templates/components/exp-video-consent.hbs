<div class="row">
  <div class="col-xs-offset-1 col-xs-10">
    <div class="well">
      <span class="exp-video-consent-prompt">{{prompt}}</span>
    </div>
  </div>
</div>
<div class="row" style="height: 70vh">
  <div id="recorder" class="col-xs-12 col-md-10 col-md-offset-1" style="height:100%"></div>
</div>
<br>
<div class="row exp-controls">
  <div class="col-xs-offset-1 col-xs-10">
    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        {{#if videoRecorder.recording}}
          <button class="btn btn-default" {{ action 'finish' }}>Finish</button>
        {{else}}
          <button class="btn btn-default" {{ action 'record' }}>Record</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
