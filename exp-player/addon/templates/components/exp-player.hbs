<div class="row" id="experiment-player">
  <div class="col-xs-12">
    {{#if (and (not isFullscreen) experiment.displayFullscreen)}}
    <p><button style="width: 100%" class="btn btn-warning" {{ action 'showFullscreen' }}>Return to fullscreen</button></p>
    {{/if}}

    {{
    component currentFrameTemplate

    frameIndex=frameIndex
    frameConfig=currentFrameConfig
    frameContext=currentFrameContext

    session=session
    experiment=experiment

    next=(action 'next')
    previous=(action 'previous')
    saveHandler=(action 'saveFrame')
    skipone=(action 'skipone')

    }}
  </div>
</div>
{{#bs-modal open=hasAttemptedExit header=false footer=false}}
  {{#bs-modal-body}}
    <p>
      Press "Leave now" to leave the study, or "Close" to continue.
    </p>
    <div class="button-group">
      <div class="pull-right">
      {{#bs-button action=(action 'exitEarly') type="warning"}}
	Leave now
      {{/bs-button}}
      </div>
      <div class=>
      {{#bs-button action=(action 'closeExitWarning') type="default"}}
	Close
      {{/bs-button}}
      </div>
    </div>
  {{/bs-modal-body}}
{{/bs-modal}}
