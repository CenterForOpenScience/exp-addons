<div class="input-group exp-video-physics">
    <video id="player-video"
           class="intro"
           autoplay={{autoplay}}
           poster="{{poster}}"
           onended={{ if autoforwardOnEnd (action 'playNext') }}
    >

        {{#if doingAttn}}

            {{#each attnSources as |stream|}}
                <source src="{{stream.src}}" type="{{stream.type}}">
            {{/each}}

        {{else}}

            {{#if doingIntro}}
                {{#each introSources as |stream|}}
                    <source src="{{stream.src}}" type="{{stream.type}}">
                {{/each}}
            {{else}}

                {{#if useAlternate}}

                    {{#each altSources as |stream|}}
                        <source src="{{stream.src}}" type="{{stream.type}}">
                    {{/each}}

                {{else}}

                    {{#each sources as |stream|}}
                        <source src="{{stream.src}}" type="{{stream.type}}">
                    {{/each}}

                {{/if}}
            {{/if}}
        {{/if}}
    </video>
</div>

{{#unless autoforwardOnEnd}}
<div class="row exp-controls">
  <button class="btn btn-default pull-right" {{ action 'next' }}>
    Continue
  </button>
</div>
{{/unless}}