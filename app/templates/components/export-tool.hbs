<div class="bg-info export-tool-container">
  <div class="row text-center">
    <div class="col-xs-2 col-xs-offset-5 form-goup">
      <select class="form-control export-tool-select" onchange={{action (mut dataFormat) value="target.value"}}>
        {{#each dataFormats as |dataFormatChoice|}}
          <option value={{dataFormatChoice}} selected={{eq dataFormat dataFormatChoice}}>{{dataFormatChoice}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="export-tool-textarea-container">
    {{textarea value=processedData class="export-tool-textarea"}}
  </div>
  <div class="row text-center">
    <button class="btn btn-primary" {{action "downloadFile"}}>Download</button>
  </div>
</div>
