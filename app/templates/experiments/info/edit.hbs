<h3>Experiment editor</h3>

<div class="row">
    <div class="col-md-8">
        {{ace-editor value=asJSON class="editor"}}
    </div>
</div>

<div class="row">
    <div class="col-md-8 pull-left">
        <button class="btn btn-sm btn-danger" {{action 'toList'}}>Discard changes</button>
        <button class="btn btn-sm btn-success" {{action 'save' asJSON}}>Save</button>

        {{#link-to "experiments.info.preview" model.id tagName="button" class="btn btn-info btn-sm pull-right" }}Try experiment{{/link-to}}
    </div>
</div>
